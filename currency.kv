MDFloatLayout:

    MDRaisedButton:
        text: "Начало диапазона"
        pos_hint: {'x':0,'top':1}
        on_release: app.show_date_picker()
    MDRaisedButton:
        text: "Конец диапазона"
        pos_hint: {'x':.2,'top':1}
        on_release: app.show_date_picker1()
    MDRaisedButton:
        id: button
        text: "Валюта"
        pos_hint: {'x':.4,'top':1}
        on_release: app.menu_open()
    MDRaisedButton:
        text: "Проверка гипотезы"
        on_release: app.get_currency()
        pos_hint: {'x':.55,'top':1}
    MDRaisedButton:
        text: "Построение графика"
        on_release: app.get_chart()
        pos_hint: {'x':.80,'top':1}

    MDLabel:
        id: date_label1
        pos_hint: {'x':0,'y':0.4}
        text: ""
    MDLabel:
        id: date_label2
        pos_hint: {'x':.2,'y':0.4}
        text: ""
    MDLabel:
        id: curr_label
        pos_hint: {'x':.4,'y':0.4}
        text: ""
    MDLabel:
        id: text_label
        pos_hint: {'x':.0,'y':0.3}
        text: ""
